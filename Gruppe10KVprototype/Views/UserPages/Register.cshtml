@model Gruppe10KVprototype.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<body class="Index">
<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; max-height: 100vh; font-family: 'Arial', sans-serif; padding: 2rem 0;">
    <h1 style="font-size: 2.5rem; color: #333; text-transform: uppercase; margin-bottom: 2rem;">Opprett konto</h1>
    <div style="width: 100%; max-width: 500px; padding: 2rem; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); border-radius: 8px; background-color: white;">
        <form asp-action="Register" method="post">
            <div style="margin-bottom: 1.5rem; margin-right: 1.5rem;">
                <label asp-for="Username" style="display: block; font-weight: bold; font-size: 1.1rem; margin-bottom: 0.5rem;">Brukernavn</label>
                <input asp-for="Username" class="form-control" placeholder="Brukernavn" style="width: 100%; padding: 0.75rem; font-size: 1rem; border: 1px solid #ccc; border-radius: 4px;" />
                <span asp-validation-for="Username" class="text-danger" style="color: orangered; display: block; margin-top: 0.25rem;"></span>
            </div>
                <div style="margin-bottom: 1.5rem; margin-right: 1.5rem;">
                <label asp-for="Email" style="display: block; font-weight: bold; font-size: 1.1rem; margin-bottom: 0.5rem;">E-post</label>
                <input asp-for="Email" class="form-control" placeholder="E-post" style="width: 100%; padding: 0.75rem; font-size: 1rem; border: 1px solid #ccc; border-radius: 4px;" />
                <span asp-validation-for="Email" class="text-danger" style="color: orangered; display: block; margin-top: 0.25rem;"></span>
            </div>
                <div style="margin-bottom: 1.5rem; margin-right: 1.5rem;">
                <label asp-for="Password" style="display: block; font-weight: bold; font-size: 1.1rem; margin-bottom: 0.5rem;">Passord</label>
                <input asp-for="Password" class="form-control" placeholder="Passord" type="password" style="width: 100%; padding: 0.75rem; font-size: 1rem; border: 1px solid #ccc; border-radius: 4px;" />
                <span asp-validation-for="Password" class="text-danger" style="color: orangered; display: block; margin-top: 0.25rem;"></span>
            </div>
            <div style="margin-bottom: 2rem; margin-right: 1.5rem;">
                <label asp-for="BekreftPassord" style="display: block; font-weight: bold; font-size: 1.1rem; margin-bottom: 0.5rem;">Bekreft passord</label>
                <input asp-for="BekreftPassord" class="form-control" placeholder="Bekreft passord" type="password" style="width: 100%; padding: 0.75rem; font-size: 1rem; border: 1px solid #ccc; border-radius: 4px;" />
                <span asp-validation-for="BekreftPassord" class="text-danger" style="color: orangered; display: block; margin-top: 0.25rem;"></span>
            </div>
            <div style="text-align: center;">
                <button type="submit" style="font-size: 1.5rem; padding: 0.75rem 2rem; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer; transition: background-color 0.3s;">Registrer</button>
            </div>
        </form>
        <div style="text-align: center; margin-top: 1.5rem;">
            <p>Har du allerede bruker? <a href="@Url.Action("Login", "Login")" style="color: #007bff; font-weight: bold; text-decoration: none; transition: color 0.3s;">Logg inn her!</a></p>
        </div>
    </div>
</div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}