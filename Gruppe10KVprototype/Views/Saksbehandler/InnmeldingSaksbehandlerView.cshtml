@model ViewModels.SaksbehandlerSingelInnmeldingViewModel
using Controllers;

<!DOCTYPE html>
<html>
<head>
    <title>Innmelding Saksbehandler</title>
</head>
<body>
</div>
    <form asp-action="GetInnmeldingStatus" method="get">
        <div class="form-group">
            <label for="innmeldID">Innmeldings ID</label>
            <input type="text" asp-for="InnmeldID" class="form-control" /> <!-- Tekstboks for å skrive inn InnmeldID -->
        </div>
        <button type="submit" class="btn btn-primary">Hent Status</button> <!-- Knapp for å hente status -->
    </form>

</div>

    </div>

    @if (Model != null)
    {
        <form asp-action="EditStatus" method="post">
            <input type="hidden" asp-for="InnmeldID" /> <!-- Skjult input for å beholde InnmeldID -->
        
            <label for="status">Velg status:</label>
            <select asp-for="CurrentStatus" asp-items="Model.StatusList" class="form-control"></select> <!-- Dropdown for status -->

            <button type="submit" class="btn btn-primary">Oppdater status</button> <!-- Lagre-knapp -->
        </form>
    }
    
    </div>

</body>
</html>