@model ViewModels.KartvisningEnInnmeldingSaksBViewModel
<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Innmelding Detaljer</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.css" />
</head>
<body>
    <div class="container">
        <!-- Informasjonspanel -->
        <div class="info-panel">
            @if (Model?.Innmelding != null)
            {
                <h2>@Model.Innmelding.Tittel</h2>

                <div class="status-info">
                    <p>Status: <span class="badge">@Model.Innmelding.Status</span></p>
                    <p>Prioritet: <span class="badge">@Model.Innmelding.Prioritet</span></p>
                    <p>Sist endret: @Model.FormaterSisteEndring</p>
                    <p>KartType: <span class="badge">@Model.Innmelding.KartType</span></p>

                    <!-- Beholder kommuneinformasjon fra TempData -->
                    @if (TempData["Kommunenavn"] != null && TempData["Kommunenummer"] != null)
                    {
                        <p>Kommune: <span class="badge">@TempData["Kommunenavn"] (@TempData["Kommunenummer"])</span></p>
                    }
                </div>

                <div class="reporter-info">
                    <h3>Innmelder</h3>
                    @if (Model.Innmelder != null)
                    {
                        <p>Type: @Model.Innmelder.InnmelderType</p>
                    }
                    else
                    {
                        <p>Gjesteinnmelder</p>
                    }
                </div>

                @if (Model.Saksbehandler != null)
                {
                    <div class="handler-info">
                        <h3>Saksbehandler</h3>
                        <p>@Model.SaksbehandlerNavn</p>
                        <p>Stilling: @Model.Saksbehandler.Stilling</p>
                    </div>
                }
            }
            else
            {
                <p>Ingen innmeldingsdetaljer tilgjengelig</p>
            }
        </div>

        <!-- Kart -->
        <div id="map" style="height: 500px;"></div>
    </div>

    <!-- JavaScript biblioteker -->
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>

    <!-- Våre konfigurasjonsfiler -->
    <script src="~/js/maps/config/mapConfig.js"></script>
    <script src="~/js/maps/utils/mapControls.js"></script>

    <script>
        // Initialiser kartet
        const map = MapConfig.initializeMap('map');
        // Legg til søkefunksjonalitet
        MapControls.initializeSearch(map);

        @if (Model?.GeometriData != null && !string.IsNullOrEmpty(Model.GeometriData.GeometriGeoJson))
        {
            <text>
                    const geoJsonFeature = JSON.parse('@Html.Raw(Model.GeometriData.GeometriGeoJson)');
                    const geoJsonLayer = L.geoJSON(geoJsonFeature).addTo(map);
                    map.fitBounds(geoJsonLayer.getBounds());
            </text>
        }
    </script>

    <style>
        .container {
            display: flex;
            padding: 20px;
            gap: 20px;
        }

        .info-panel {
            flex: 1;
            max-width: 400px;
        }

        #map {
            flex: 2;
        }

        .badge {
            padding: 5px 10px;
            border-radius: 4px;
            background-color: #f0f0f0;
        }
    </style>
</body>
</html>