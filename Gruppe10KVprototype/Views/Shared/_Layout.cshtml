<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gruppe10KVprototype</title>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <style>
        body {
            margin: 0;
            padding: 65px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar {
          
            padding: 1rem 1rem;
      
        }

        .navbar-brand img {
            height: px;
        }

        .container-fluid {
            display: flex;
            justify-content: space-between;
            align-items: left;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .navbarlist {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 1.5rem;
            align-items: center;
        }

        .nav-link {
            color: #333;
            text-decoration: none;
            font-size: 0.9rem;
            padding: 0.5rem;
          
        }

            .nav-link:hover {
                color: #0066cc;
            }

        /* Dropdown styling */
        .dev-dropdown {
            position: relative;
            display: inline-block;
        }

        .dev-dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            background-color: #f9f9f9;
            min-width: 250px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
            z-index: 1000;
            border-radius: 4px;
            padding: 0.5rem 0;
        }

        .dev-dropdown:hover .dev-dropdown-content {
            display: block;
        }

        .dev-dropdown-content a {
            color: #333;
            padding: 0.5rem 1rem;
            text-decoration: none;
            display: block;
            font-size: 0.8rem;
        }

            .dev-dropdown-content a:hover {
                background-color: #f0f0f0;
            }

        .dev-button {
            background-color: #ff6b6b;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.8rem;
        }

        main {
            flex: 1;
            width: 100%;
            margin: 0;
            padding: 0;
        }

        footer {
            background-color: #f8f9fa;
            padding: 1rem;
            text-align: center;
            border-top: 1px solid #eee;
        }

        .footer-content {
            max-width: 1400px;
            margin: 0 auto;
        }
    </style>
    @await RenderSectionAsync("Styles", false)
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("~/Images/LogoKartverket.png")" alt="Kartverket Logo" />
                </a>

                <div id="navbar-menu">
                    <ul class="navbarlist">
                        <li><a class="nav-link" asp-controller="Home" asp-action="Index">Hjem</a></li>
                        <li><a class="nav-link" asp-controller="LoggInn" asp-action="LoggInn">Logg inn</a></li>

                        <!-- Development dropdown -->
                        <li class="dev-dropdown">
                            <button class="dev-button">Utvikling</button>
                            <div class="dev-dropdown-content">
                                <div style="padding: 0.5rem; border-bottom: 1px solid #eee;">
                                    <strong>Saksbehandler</strong>
                                </div>
                                <a href="@Url.Action("LandingsSideSaksB", "LandingsSideSaksB")">Landingsside</a>
                                <a href="@Url.Action("OversiktAlleInnmeldingerSaksB", "OversiktAlleInnmeldingerSaksB")">Oversikt alle innmeldinger</a>
                                <a href="@Url.Action("KartvisningAlleInnmeldingerSaksB", "KartvisningAlleInnmeldingerSaksB")">Kartvisning</a>
                                <a href="@Url.Action("SortereInnmeldingerSaksB", "SortereInnmeldingerSaksB")">Sortere innmeldinger</a>
                                <a href="@Url.Action("SøkEtterInnmelderSaksB", "SøkEtterInnmelderSaksB")">Søk etter innmelder</a>
                                <a href="@Url.Action("LoggInnSaksB", "LogginnSaksB")">LoggInn</a>

                                <div style="padding: 0.5rem; border-bottom: 1px solid #eee; margin-top: 0.5rem;">
                                    <strong>Innmelder</strong>
                                </div>
                                <a href="@Url.Action("RegistrerDeg", "RegistrerDeg")">Registrer deg</a>
                                <a href="@Url.Action("KartfeilMarkering", "KartfeilMarkering")">Meld inn feil NY</a>
                                <a href="@Url.Action("OppdatereInnmelding", "OppdatereInnmelding")">Oppdater innmelding</a>
                                <a href="@Url.Action("LandingsSide", "LandingsSide")">Landings Side</a>
                                <a href="@Url.Action("MineInnmeldinger", "MineInnmeldinger")">Mine Innmeldinger</a>
                                <a href="@Url.Action("BidraTilKartforbedring", "BidraTilKartForbedring")">Bidra</a>
                                
                                <div style="padding: 0.5rem; border-bottom: 1px solid #eee; margin-top: 0.5rem;">
                                    <strong>DummyTabeller</strong>
                                </div>
                                <a href="@Url.Action("OversiktAlleInnmeldingerSaksBIncidentForm", "OversiktAlleInnmeldingerSaksBIncidentForm")">Gammel oversikt SaksB</a>
                                <a href="@Url.Action("DropDownDummySaksB", "DropDownDummySaksB")">Dummy Dropdown SaksB</a>
                                

                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="footer-content">
            &copy; 2024 - Gruppe10KVprototype - <a href="@Url.Action("Privacy", "Home")">Personvern</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>