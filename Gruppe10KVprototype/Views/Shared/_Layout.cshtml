<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" /> <!-- Link to your CSS file -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" /> <!-- Bootstrap CSS if used -->
</head>
<body class="@ViewData["BodyClass"]">
    <header>
        <nav class="navbar">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("~/Images/LogoKartverket.png")" alt="Logo" />
                </a>
                <div id="navbar-menu" class="navbartop">
                    <ul class="navbar-list d-flex justify-content-end">
                        <!-- Ensure items are right-aligned -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Hjem</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="MapView">Kart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="AreaChange" asp-action="RegisterAreaChange">Fanging kartdata V2</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="AdviserForm" asp-action="Index">Saksbehandler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="UserPages" asp-action="Login">Logg Inn</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="navbar-divider"></div> <!-- Divider for visual separation -->
    </header>

    <main role="main" class="flex-grow-1">
        <div class="content-window">
            @RenderBody() <!-- Render the body of the page -->
        </div>
    </main>

    <footer>
        <div class="footer-content">
            <p>&copy; 2024 Your Company. All Rights Reserved.</p>
        </div>
    </footer>

    <script src="~/js/bootstrap.bundle.min.js"></script> <!-- Bootstrap JS if used -->
    <script src="~/js/site.js"></script> <!-- Link to your custom JS file -->
</body>
</html>