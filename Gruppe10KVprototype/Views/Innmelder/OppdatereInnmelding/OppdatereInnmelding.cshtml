@model ViewModels.OppdatereInnmeldingViewModel
@{

    Layout = "_Layout";
}

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"/>
<style>
    #updateRegisteredCaseMapView {
        height: 300px;
        width: 100%;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .updateRegisteredCaseForm {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
    }
</style>

@foreach (var innmelding in Model.OppdatereInnmeldinger)
{
    <div class="updateRegisteredCaseForm">
        <div class="updateRegisteredCaseID">
            <h3>Sak ID #@innmelding.InnmeldingId</h3>
        </div>

        <div class="updateRegisteredCaseSubject">
            <h3>Tittel: @innmelding.Tittel</h3>
        </div>

        <div class="updateRegisteredCaseStatus">
            <h3>Status: @innmelding.Status</h3>
        </div>

        <div class="updateRegisteredCaseDescription">
            <h3>Beskrivelse:</h3>
            <p>@innmelding.Beskrivelse</p>
        </div>

        <h3>Kartvisning av feil</h3>
        <div id="updateRegisteredCaseMapView"></div>
    </div>
}

<!-- Action Buttons -->
<div class="singleCaseActions">
    <button>Edit</button>
    <button>Update</button>
    <button>Delete</button>
</div>

<!-- Konfig av mapview -->
<script src="~/js/maps/config/mapConfig.js"></script>
<script src="~/js/maps/config/drawConfig.js"></script>
<script src="~/js/maps/services/wmsService.js"></script>
<script src="~/js/maps/utils/mapControls.js"></script>