@model ViewModels.Registrering.KomplettRegistreringViewModel
@{
    ViewData["Title"] = "Registrer deg";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-controller="RegistrerDeg" asp-action="RegistrerInnmelder" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div id="personInfo">
                            <h4 class="mb-3">Personlig informasjon</h4>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Fornavn" class="form-label"></label>
                                    <input asp-for="Fornavn" class="form-control" />
                                    <span asp-validation-for="Fornavn" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Etternavn" class="form-label"></label>
                                    <input asp-for="Etternavn" class="form-control" />
                                    <span asp-validation-for="Etternavn" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Telefonnummer" class="form-label"></label>
                                <input asp-for="Telefonnummer" class="form-control" />
                                <span asp-validation-for="Telefonnummer" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div id="passordInfo" class="mt-4">
                            <h4 class="mb-3">Opprett passord</h4>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="BekreftPassord" class="form-label"></label>
                                <input asp-for="BekreftPassord" class="form-control" />
                                <span asp-validation-for="BekreftPassord" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Registrer deg</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Avbryt</a>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <p>Har du allerede en bruker? <a asp-controller="LoggInn" asp-action="LoggInn">Logg inn her</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}