@{
    Layout = "_Layout";
}

<div class="login-page">
    <div class="login-card">
        <h1 class="login-card__title">Logg inn</h1>
        <form method="post" asp-controller="LandingsSide" asp-action="LandingsSide" class="login-card__form">
            <div class="login-card__form-group">
                <label class="login-card__label">E-post</label>
                <input type="email" class="login-card__input" required />
                <span class="text-danger"></span>
            </div>
            <div class="login-card__form-group">
                <label class="login-card__label">Passord</label>
                <input type="password" class="login-card__input" required />
                <span class="text-danger"></span>
            </div>
            <div class="login-card__button-container">
                <button type="submit" class="login-card__button">Logg inn</button>
            </div>
        </form>
        <div class="login-card__forgot-password">
            <a href="#" class="login-card__forgot-password-link">Glemt passord?</a>
        </div>
        <div class="login-card__register">
            <p>Ikke registrert? <a asp-controller="RegistrerDeg" asp-action="RegistrerDeg" class="login-card__register-link">Opprett konto her!</a></p>
        </div>
    </div>
</div>