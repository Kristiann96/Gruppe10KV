@{
    Layout = "_Layout";
}
<head>
    <link rel="stylesheet" href="~/css/pages/innmelder/LoggInnInnmelder.css" />
</head>
<div class="login-page">
    <div class="login-card">
        <h1 class="login-card__title">Logg inn</h1>

        <form method="post" asp-controller="LandingsSide" asp-action="LandingsSide" style="width: 100%;">
            <div class="login-form-group">
                <label class="login-label" for="email">E-post</label>
                <input id="email" type="email" class="login-input" placeholder="Din e-postadresse" required />
                <span class="login-error"></span>
            </div>

            <div class="login-form-group">
                <label class="login-label" for="password">Passord</label>
                <input id="password" type="password" class="login-input" placeholder="Ditt passord" required />
                <span class="login-error"></span>
            </div>

            <button type="submit" class="login-button">Logg inn</button>
        </form>

        <div class="forgot-password">
            <a href="#" class="forgot-password-link">Glemt passord?</a>
        </div>

        <div class="register-section">
            <p class="register-text">
                Ikke registrert?
                <a asp-controller="RegistrerDeg" asp-action="RegistrerDeg" class="register-link">
                    Opprett konto her!
                </a>
            </p>
        </div>
    </div>
</div>
