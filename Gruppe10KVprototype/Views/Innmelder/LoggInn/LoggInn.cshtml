@model ViewModels.LoggInnViewModel

@{
    Layout = "_Layout";
}

<head>
    <link rel="stylesheet" href="~/css/pages/innmelder/LoggInnInnmelder.css" />
</head>
<div class="login-page">
    <div class="login-card">
        <h1 class="login-card__title">Logg inn</h1>
        <form method="post" asp-controller="LoggInn" asp-action="LoggInn" style="width: 100%;">
            <div class="login-form-group">
                <label asp-for="Email" class="login-label"></label>
                <input asp-for="Email" class="login-input" placeholder="Din e-postadresse" />
                <span asp-validation-for="Email" class="login-error"></span>
            </div>
            <div class="login-form-group">
                <label asp-for="Password" class="login-label">Passord</label>
                <input asp-for="Password" class="login-input" placeholder="Ditt passord" />
                <span asp-validation-for="Password" class="login-error"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" align="center"></div>
            @Html.AntiForgeryToken()
            <button type="submit" class="login-button">Logg inn</button>
        </form>
        <div class="forgot-password">
            <a href="#" class="forgot-password-link">Glemt passord?</a>
        </div>
        <div class="register-section">
            <p class="register-text">
                Ikke registrert?
                <a asp-controller="RegistrerDeg" asp-action="RegistrerDeg" class="register-link">
                    Opprett konto her!
                </a>
            </p>
        </div>
    </div>
</div>
