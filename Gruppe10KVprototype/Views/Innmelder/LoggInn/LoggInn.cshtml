@{
    Layout = "_Layout";
}
<body class="Index">
    <div class="posterPage">
        <div class="innmeldCard">
            <h1>LOGG INN</h1>
            <form method="post" asp-controller="LandingsSide" asp-action="LandingsSide">
                <div class="form-group">
                    <label>E-post</label>
                    <input type="email" class="form-control" required />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Passord</label>
                    <input type="password" class="form-control" required />
                    <span class="text-danger"></span>
                </div>
                <div style="text-align: center;">
                    <button type="submit" class="Button-MeldInn">Logg inn</button>
                </div>
            </form>
            <div class="forgot-password" style="text-align: center; margin-top: 1rem;">
                <a href="#" style="color: #555; text-decoration: none;">Glemt passord?</a>
            </div>
            <div class="register-link" style="margin-top: 2.5rem;">
                <p>Ikke registrert? <a asp-controller="RegistrerDeg" asp-action="RegistrerDeg">Opprett konto her!</a></p>
            </div>
        </div>
    </div>
</body>
